<main class="flex flex-col gap-4 w-full max-w-xl">
  <%= simple_form_for @account, url: form_url_for_account(@account), method: form_method_for_account(@account) do |f| %>
    <%= f.input :name, placeholder: @account.personal_account ? "Your full name" : "Team / organization name" %>
    <div class="py-4">
      <%= f.button :submit, (@account.persisted? ? "Update profile" : "Create account") %>
    </div>
  <% end %>
</main>
