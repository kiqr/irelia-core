<% title "Create a new team account" %>

<%= container do %>
  <%= page_header(title: "Settings", subtitle: "Update your #{@account.personal_account? ? "personal" : "team's"} profile") %>
  <div class="grid grid-cols-3 gap-x-8">
    <aside class="flex flex-col gap-y-10 bg-white dark:bg-dark-900 p-8 rounded shadow">
      <section>
        <h5 class="font-bold border-b dark:border-dark-700 mb-4 pb-2 text-primary-700">
          <div class="w-6 mr-2 text-center float-left"><i class="fa fa-users"></i></div> Account settings
        </h5>
        <nav class="flex flex-col gap-y-2">
          <%= link_to "Edit your profile", edit_account_path, class: "dark:text-dark-400 dark:hover:text-white hover:text-primary-700" %>
          <%= link_to "Change subscription plan", "#", class: "dark:text-dark-400 dark:hover:text-white hover:text-primary-700" %>
        </nav>
      </section>

      <section>
        <h5 class="font-bold border-b dark:border-dark-700 mb-4 pb-2 text-primary-700">
          <div class="w-6 mr-2 text-center float-left"><i class="fa fa-lock"></i></div> User & Security
        </h5>
        <nav class="flex flex-col gap-y-2">
          <%= link_to "Email and password", edit_user_registration_path, class: "dark:text-dark-400 dark:hover:text-white hover:text-primary-700" %>
          <%= link_to "Two-factor authentication", "#", class: "dark:text-dark-400 dark:hover:text-white hover:text-primary-700" %>
        </nav>
      </section>
    </aside>
    <div class="col-span-2">
      <%= render "teamable/shared/form" %>
    </div>
  </div>
<% end %>
