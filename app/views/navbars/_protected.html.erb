<%= navbar do %>
  <%= render "shared/navbar_logo" %>

  <%= navbar_separator %>

  <% if account_selected? %>
    <%= navbar_link "Dashboard", dashboard_path %>
  <% end %>

  <%= navbar_right do %>
    <% if account_selected? %>
      <%= navbar_link(nil, "#", { icon: "fa fa-bell" }) %>
      <%= navbar_separator %>
      <%= navbar_account_switcher %>
      <%= navbar_separator %>
      <%= navbar_link(nil, edit_account_path, { icon: "fa fa-gear" }) %>
    <% end %>
    <%= render(Navbar::DarkModeSwitcher::Component.new) %>
    <%= navbar_button(nil, destroy_user_session_path, { method: :delete, icon: "fa fa-right-from-bracket" }) %>
  <% end %>
<% end %>
